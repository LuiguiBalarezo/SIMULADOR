@media screen and (min-width: 1280px){
	#header{
		nav{
			width: 72.5%;

			top: 88.5%;
			ul{
				li{
					a{
						padding: 22px 28px;
						font-size: 15px;
					}
				}
			}
		}
	}
	#inicio{
		div.logo{
			top: 150px;

		}
		section.portada{
			.fluid_container {
				height: 100%;
			}
			#camera_wrap_4{
				div.camera_caption{
					padding: 40px 18% 140px 15%;
					div{
						h1{
							font-size: 65px
						}
						p{
							font-size: 38px;
						}
					}
				}
			}
		}
	}
	#nosotros{
		section.list_content{
			article{
				div.descripcion{
					width: 80%;
					text-align: justify;
					height: 400px;
				}
			}
		}
	}
	#registro {
		article.block-descrip{
			header{
				font-size: 40px;
				margin-right: 25px;
			}
		}
	}
	#contactenos{
		article.content-top{
			div.top-numbers{
				ul{
					font-size: 38px;
				}
			}
			article.form{
				div.form{
					div.inp{
						input, textarea{
							font-size: 18px;
						}
					}
				}
				div.servicio-tecnico{
					a{
						figure{
							img{
								width: 115px;
							}
						}
					}
					#pop2{
						height: 1500px;
					}
				}
			}
		}
		
		article.bottom{
			footer{
				margin-top: 22px !important;
			}
		}
	}
	#entidades{
		header{
			h1{
				font-size: 22px;
				line-height: 30px;
			}
		}
		
		section.content{
			div.slider-wrap{
				ul{
					li{
						div.publicacion{
							margin: 0 25px 0 0;
							padding: 20px 0;
							width: auto;
							figure{
								img{
									width: auto;
									height: 72px;
								}
							}
						}
					}
				}
			}
		}
	}
}