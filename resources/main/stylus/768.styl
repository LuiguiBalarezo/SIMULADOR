@media screen and (min-width: 768px){
	#inicio{
		div.logo{
			top: 140px;
			width: 450px;
			left: calc(50% - 225px);
		}
		section.portada{
			.fluid_container {
				height: 600px;
			}
			#camera_wrap_4{
				div.camera_caption{
					padding 40px 25% 140px 25%
					div{
						font-size 24px
					}
				}
				.camera_pag{
					bottom: 40px;
				}
			}
		}
		section.bottom_inicio{
			ul{
				padding 40px 0
				li{
					display inline-block
					padding 5px 20px
					font-size 16px
					vertical-align middle
					&.separador{
						display inline-block
					}
				}
			}
		}
	}
	#nosotros{
		>header{
			h2, h3{
				font-size: 26px;
				line-height: 25px;
			}
		}
		section.content{
			max-width: 700px;
			article{
				margin-bottom 50px
				width: 720px;
				p{
					font-size: 20px;
					line-height: 24px;
				}
			}
		}
		section.list_content{
			article{
				padding 0 0 30px 0
				div.descripcion{
					padding 0 30px
				}
			}
		}
	}
	#contactenos{
		article.content-top{
			h1{
				font-size: 35px;
			}
		}
	}
	#registro{
		article.block-formulario{
			div.content-form{
				margin: 10px 16px 25px;
			}
		}
	}

}