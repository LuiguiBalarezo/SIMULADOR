@import "nib"
@import "nib/vendor"
@import "normalize.styl"
@import "reset.styl"
@import "mixin.styl"
vendor-prefixes = webkit moz ms o official

body {
	font-size 16px
	overflow-x: hidden;
	position relative
	*{
		font-family 'humanst521_lt_btlight'
	}
}
#header{
	position relative
	top 0
	width 100%
	z-index 115
	div.view_menu{
		cursor pointer
		font-size: 0;
		height 40px
		width 100%
		position absolute
		z-index 20
		div{
			margin-left: auto;
			width 50px
			padding 7px 10px
			height 40px
			img{
				height 100%
			}
		}
	}
	nav{
		background: #4c4c4c;
		position: fixed;
		top: 0;
		right: -250px;
		z-index: 120;
		width 250px
		transition .2s linear
		ul{
			text-align center
			font-size 0
			li{
				a{
					font-size: 18px;
					display: block;
					line-height: 25px;
					width: 250px;
					padding: 20px 15px;
					color: #fff;
					text-align: center;
					border-bottom: 1px solid #2f2f31;
					figure{
						display: none;
					}
				}
				&.separador{
					display none
				}
			}
		}
		&.m_visible{
			right: 0;
		}
	}
}
#inicio{
	div.logo{
		position: absolute;
		z-index: 30;
		top: 25px
		width: 220px;
		left: calc(50% - 110px);
		img{
			width 100%
		}
	}
	section.portada{
		.fluid_container {
			position: relative;
			z-index: 0;
			width: 100%;
			height: 220px;
		}
		#camera_wrap_4{
			bottom: 0;
			height: 100%;
			left: 0;
			margin-bottom: 0 !important;
			position: absolute;
			right: 0;
			top: 0;
			div.cameraSlide img{
				width 100% !important
				height 100% !important
				margin 0 !important
			}
			div.camera_caption{
				position absolute
				z-index 10
				bottom 0 
				right 0
				left 0
				padding 30px 25% 60px 25%
				div{
					text-align center
					background: none;
					padding: 0;

					h1{
						color: white;
						text-shadow: 2px 2px 8px #000;
						font-size 22px

					}
					p{
						color: #fff;
						text-shadow: 2px 2px 8px #000;
						font-size 14px
					}
				}
			}
			.camera_pag{
				bottom: 5px;
			}
			.camera_prev, .camera_next{
				display none
			}
			.camera_overlayer {
				opacity: 0.02;
			}
		}
	}
	section.bottom_inicio{
		background color_g_1
		ul{
			text-align center
			padding 20px 0
			li{
				padding 5px 0
				font-size 14px
				color white
				display block
				&.separador{
					display none
				}
			}
		}
	}
}
#nosotros{
	position relative
	width 100%
	// padding-top 40px
	background #fff
	background-size cover
	overflow hidden
	>header,.list_header{
		padding 25px 0
		position relative
		text-align center
		h2,h3{
			color color_gris
			font-size: 22px;
			line-height: 25px;
		}
		h3{
			color: #403d3e;
			font-size: 22px;
			line-height: 25px;
		}
	}
	.list_header{
		padding: 60px 0 10px;
	}
	section.content{
		text-align: center;
		max-width 350px
		margin 0 auto
		article{
			.a-link{
				width: auto;
				height: auto;
				position: relative;
				color color_gris
				font-weight bold
				font-size: 18px;
				line-height: 24px;
				transform: translateZ(0)
				transition-duration: 0.2s;
				&:hover{
					color: #0f4bb6
					font-size 20px
					text-decoration: underline;
				}
			}
			p{
				font-size: 14px;
				line-height: 18px;
				margin-bottom: 5px;
			}
			
			div.icons-help-service{
				div.content-service{
					display block
				}
			}
		}
	}
	section.list_content{
		display none
		.cerrar{
			position: absolute;
			right: 2%;
			top: 2%;
			img{
				width: 45px;
			}
		}
		article{
			text-align center
			padding 30px 0

			div.descripcion{
				padding 0 15px
				text-align left
				height: 400px;
				p{
					line-height 20px
				}
				figure{
					padding: 25px 0px;
					img{
						width 100%
					}
				}
			}
		}
	}
}
#registro{
	width 100%
	padding-top 40px
	background url("../images/background/servicios.jpg")
	background-size cover
	text-align: center;
	article.block-descrip{
		header{
			text-align: center;
			color: #0f72b7;
			font-size: 20px;
			margin-bottom: 20px;
		}

		div.text-bottom{
			font-size: 16px;
			margin: 20px 0;
		}

		div.transferencias-bancos{
			div.banco{
				display: block;
				margin: 8px;
			}
			
			div.enlace{
				a{
					p{
						color: #0f72b7;
						font-size: 18px;
						text-decoration: underline;
					}
				}
			}
			
			#popup1,#popup2, #popup3, #popup4, #popup5{
				z-index: 99;
				position: fixed;
				top: 0;
				bottom: 0;
				left: 0;
				right: 0;
				background: rgba(0, 0, 0, 0.7);
				transition: opacity 500ms;
				visibility: hidden;
				opacity: 0;
				&:target {
					visibility: visible;
					opacity: 1;
				}

				.popup {
					margin: 70px auto;
					padding: 20px;
					background: #fff;
					border-radius: 5px;
					width: 30%;
					position: relative;
					transition: all 5s ease-in-out;

					h2 {
						margin-top: 0;
						color: #333;
						font-size: 22px;
						font-weight: bold;
					}
					
					p{
						font-size: 18px;
						color: #7B7B7B;
						margin-top: 10px;
					}
					span.number{
						line-height: 30px;
					}

					.close {
						position: absolute;
						top: 12px;
						right: 15px;
						transition: all 200ms;
						font-size: 30px;
						font-weight: bold;
						text-decoration: none;
						color: #333;
						&:hover {
							color: #0f4bb6;
						}
					}

					
					.content {
						max-height: 50%;
						overflow: auto;
						form{
							div.inp{
								margin: 5px 0px;
								input, textarea{
									width: 204px;
									height: 35px;
									background-color: #EAEAEA;
									border: 0;
									padding: 10px;
									color: #000;
									
								}
								textarea{
									height 80px
								}
								button{
									background-color: #0f72b7;
									border: 0;
									width: 150px;
									height: 40px;
									padding: 12px;
									color: #fff;
									font-size: 18px;
								}
							}
						}
					}
				}
			}
		}

	}

	article.block-formulario{
		div.content-form{
			background-color: #fff;
			padding: 30px;
			margin: 10px 0px 25px;
			form{
				header{
					color: #282828;
					font-size: 15px;
					line-height: 18px;
					margin-bottom: 10px;
				}
				div.inp{
					margin: 11px 0;
					input{
						border: 1px solid #9ce5c9;
						height: 30px;
						width: 200px;
						padding: 4px;
					}
				}

				.boton-registrarme, .boton-ingreso-facebook{
					a{
						img{
							width: 200px;
						}
					}
				}
			}
		}
	}
}

#entidades{
	padding 40px 0 40px 0
	header{
		h1{
			text-align: center;
			font-size: 15px;
			line-height: 20px;
			color: #0f72b7;
		}
	}
	section.content{
		position relative
		div.slider-wrap{
			width calc(100% - 30px);
			margin 0 auto
			ul{
				overflow-x: auto;
				overflow-y: hidden;
				text-align center
				white-space: nowrap;
				li{
					text-align center
					overflow hidden
					&:last-child div.publicacion:last-child,&:last-child div.music:last-child{
						margin-right 0
					}
					
					div.publicacion{
						margin: 0 17px 0 0;
						padding: 25px 0;
						text-align: left;
						white-space: initial;
						width: auto;
						figure {
							img {
								-webkit-filter: grayscale(100%);
								filter: grayscale(100%);
								-webkit-transition: .3s ease-in-out;
								transition: .3s ease-in-out;
								cursor: pointer;
								&:hover{
									-webkit-filter: grayscale(0);
									filter: grayscale(0);
								}
							}
							
						}
					}
				}
			}
		}
	}
}

