@keyframes agrandar {
	from {
		transform scale(1)
		opacity 1
		display inline-block
	}
	to {
		transform scale(2.5)
		opacity 0
	}
}
@keyframes reducir {
	from {
		transform scale(2.5)
		opacity 0
	}
	to {
		transform scale(1)
		opacity 1
	}
}
@keyframes ocultar {
	from {
		transform scale(1)
		opacity 1
	}
	to {
		transform scale(0.4)
		opacity 0
	}
}

@keyframes mostrar {
	from {
		transform scale(0.4)
		opacity 0
	}
	to {
		transform scale(1)
		opacity 1
	}
}